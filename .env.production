# Configuración de Producción Payway
# =====================================

# IMPORTANTE: Estas variables deben configurarse en el servidor de producción
# NO incluir las claves reales en el código fuente

# Entorno Payway
NODE_ENV=production
PAYWAY_ENV=production

# Credenciales de Producción (REEMPLAZAR con las reales)
NEXT_PUBLIC_PAYWAY_PUBLIC_KEY=TU_PUBLIC_KEY_PRODUCCION
PAYWAY_PRIVATE_KEY=TU_PRIVATE_KEY_PRODUCCION
NEXT_PUBLIC_PAYWAY_SITE_ID=TU_SITE_ID_PRODUCCION
NEXT_PUBLIC_PAYWAY_COMPANY_ID=TU_COMPANY_ID_PRODUCCION
PAYWAY_USER_ID=TU_USER_ID_PRODUCCION

# URLs de Producción
NEXT_PUBLIC_CRM_BASE_URL=https://api-nexus.atomsolucionesit.com.ar/api
NEXT_PUBLIC_API_URL=https://tu-dominio.com/api

# Token de Empresa (generar uno nuevo para producción)
NEXT_PUBLIC_COMPANY_TOKEN=TU_COMPANY_TOKEN_PRODUCCION

# Configuración de Seguridad
ENCRYPTION_KEY=TU_ENCRYPTION_KEY_PRODUCCION_32_CHARS

# Base de Datos de Producción
DATABASE_URL=mysql://usuario:password@host:puerto/database_produccion

# Configuración JWT
JWT_SECRET=TU_JWT_SECRET_PRODUCCION_MUY_SEGURO

# URLs Frontend
FRONTEND_URL=https://tu-dominio.com

# Configuración de Email
MAIL_PASS=tu_password_email_produccion
MAIL_DEFAULT_FROM=tu-email@dominio.com

# Configuración SSL/TLS
FORCE_HTTPS=true
SECURE_COOKIES=true